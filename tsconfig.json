{
	"include": ["./src/index.ts"],
	"compilerOptions": {
		"module": "CommonJS",
		"target": "es5",
		"lib": [
		  "dom",
		  "dom.iterable",
		  "esnext",
		
		],
		"esModuleInterop": true,
		"declaration": true,
